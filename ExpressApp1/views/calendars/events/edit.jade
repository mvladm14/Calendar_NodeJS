extends ../../layout

block content
    h1.
        Event ID #{event._id}
    form(action='/calendars/events/#{event._id}/edit',method='post',name='updateevent',enctype='application/x-www-form-urlencoded')
        p Name: 
            input#inputName(type='text', value='#{event.name}', name='name')
        p Description: 
            input#inputDescription(type='text', value='#{event.description}', name='description')
        p Location:
            input#inputLocation(type="text", value='#{event.location}', name="location")
        p Start Time: 
            input#inputStartTime(type='date', value='#{event.startTime}', name='startTime')
        p End Time: 
            input#inputEndTime(type='date', value='#{event.endTime}', name='endTime')
        p Priority: 
            input#inputPriority(type='text', value='#{event.priority}', name='priority')
        p 
            input(type='hidden',value='PUT',name='_method')
        p 
            button#btnSubmit(type='submit') UPDATE