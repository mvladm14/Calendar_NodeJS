extends ../../layout

block content
    h1.
        #{title}
    form#formAddEvent(name="addevent",method="post",action="/calendars/#{calendar._id}/events/new")
        p Name: 
            input#inputName(type="text", placeholder="ex. event name", name="name")
        p Description:
            input#inputDescription(type="text", placeholder="ex. description", name="description")
        p Location:
            input#inputLocation(type="text", placeholder="ex. Pohjoinnen 32", name="location")
        p Starting Time:
            input#inputStartTime(type="date", placeholder="eg. mm/dd/yyyy hh:mm:ss", name="startTime")
        p End Time:
            input#inputEndTime(type="date", placeholder="eg. mm/dd/yyyy hh:mm:ss", name="endTime")
        p Priority: 
            input#inputPriority(type="text", placeholder="eg. high, low", name="priority")        
        p 
            input(type='hidden',value='PUT',name='_method')
        p
            button#btnSubmit(type="submit") submit